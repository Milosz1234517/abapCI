         </colorOverride>
         <colorOverride
               id="org.eclipse.ui.workbench.ACTIVE_TAB_BG_END"
               value="255,165,0">
         </colorOverride>
      </theme>

      <theme
            id="com.abapCi.custom.LIGHT_ORANGE_THEME"
            name="Lightorange Theme">
