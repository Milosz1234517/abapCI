               value="255,219,153">
         </colorOverride>
         <colorOverride
               id="org.eclipse.ui.workbench.ACTIVE_TAB_BG_END"
               value="255,219,153">
         </colorOverride>
      </theme>

     <theme
            id="com.abapCi.custom.GRAY_THEME"
            name="Gray Theme">
         <colorOverride
               id="org.eclipse.ui.workbench.ACTIVE_TAB_BG_START"
               value="128,128,128">
         </colorOverride>
         <colorOverride
               id="org.eclipse.ui.workbench.ACTIVE_TAB_BG_END"
